root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4

[*.html]
max_line_length = 170

[{/resources/scss/**.scss, /resources/sass/**.scss, src/scss/**.scss}]
indent_size = 2
max_line_length = 150

[{/resources/js/*.js, src/js/**.js, **.json}]
indent_size = 2
max_line_length = 150
